<h1>Books</h1>
<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
   <tr class = "table">
    <td class = "book-title"><%= book.title %></td>
    <td class = "book-body"><%= book.body %></td>
    <td class = "show"><%= link_to "Show", book_path(book) %></td>
    <td class = "destroy"><%= link_to "Destroy", book_path(book), method: :delete %></td>
    <td class = "edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
   </tr>
  <% end %>
 </tbody>
</table>


<%= form_for(@book) do |f| %>
<h2>New book</h2>
<% @book.errors.full_messages.each do |message| %>
 <div class="form-error">
  <%= @book.errors.count %>件のエラーが発生しました
  <%= message %>
 </div>
<% end %>
<h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_field :body %>
 <%= f.submit %>
<% end %>

